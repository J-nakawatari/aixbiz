# MongoDB接続
MONGODB_URI=mongodb://localhost:27017/aixbiz

# OpenAI API設定 (必須)
OPENAI_API_KEY=your-openai-api-key-here

# セキュリティ設定 (本番環境では必ず変更してください)
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# サーバー設定
PORT=4004
NODE_ENV=development

# CORS設定
CORS_ORIGIN=http://localhost:3000

# 開発者IPアドレス (レート制限除外用、カンマ区切り)
DEVELOPER_IPS=127.0.0.1,::1

# Redis接続URL (オプション、デフォルト: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# SendGrid設定（本番環境のみ必要）
# APIキーはSendGridダッシュボードから取得
SENDGRID_API_KEY=your-sendgrid-api-key
# 送信元メールアドレス（SendGridで認証済みのドメイン）
SENDGRID_FROM_EMAIL=noreply@aixbiz.jp
# 管理者通知先メールアドレス
ADMIN_EMAIL=admin@aixbiz.jp

# メール送信を無効化（テスト環境用）
# DISABLE_EMAIL=true